
<table class="hgn_width hgn_no_wrapping">
    <tr>
        <th class="hgn_source">"Source"</th>
        <th class="hgn_description">"Description"</th>
        <th class="hgn_created">"Created"</th>
        <th class="hgn_completed">"Completed"</th>
    </tr>
    each(tasks) {
        if(done) { within(.) { template:done-row() } }
        else     { within(.) { template:not-done-row() } }
    }
</table>
